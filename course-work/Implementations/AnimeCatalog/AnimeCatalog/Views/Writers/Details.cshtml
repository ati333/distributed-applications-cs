@model AnimeCatalog.Models.Writer

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Writer</h4>
    <hr />

    @if (!string.IsNullOrEmpty(Model.ImageUrl))
    {
        <div class="text-center mb-4">
            <img src="@Model.ImageUrl" alt="@Model.FullName" style="max-width: 300px; border-radius: 50%; box-shadow: 0 4px 8px rgba(0,0,0,0.2);" />
        </div>
    }
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.FullName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.FullName)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.BirthDate)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.BirthDate)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.YearsActive)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.YearsActive)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NetWorthMillions)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NetWorthMillions)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.IsRetired)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.IsRetired)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Biography)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Biography)
        </dd>
    </dl>
</div>
<div>
    @if (User.IsInRole("Admin"))
    {
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> <span> | </span>
    }
    <a asp-action="Index">Back to List</a>
</div>